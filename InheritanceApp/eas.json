{
  "cli": {
    "version": ">= 16.32.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "autoIncrement": true
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease -Pexpo.useLegacyPackaging=true"
      },
      "channel": "preview",
      "autoIncrement": true
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease -Pexpo.useLegacyPackaging=true"
      },
      "channel": "production",
      "autoIncrement": true
    }
  }
}
